<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>
        %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %X{trackingNumber}  %msg%n
      </Pattern>
    </layout>
  </appender>

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>

  <logger name="com.tycorp.simplekanban" level="TRACE" >
    <appender-ref ref="STDOUT"/>
  </logger>
  <logger name="com.tycorp.simplekanban" level="DEBUG" >
    <appender-ref ref="STDOUT"/>
  </logger>
</configuration>